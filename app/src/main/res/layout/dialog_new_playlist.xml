<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".NewPlaylistBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/new_playlist_input_padding_start"
        android:paddingTop="@dimen/content_padding"
        android:paddingEnd="@dimen/new_playlist_input_padding_end"
        android:paddingBottom="@dimen/content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_content_padding"
            android:layout_marginEnd="@dimen/small_content_padding"
            android:text="@string/playlist_enter_title"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_header" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLength="@integer/playlist_name_length_limit"
            android:maxLines="1"
            android:minWidth="280dp" />

    </LinearLayout>

</layout>