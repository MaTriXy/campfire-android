<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarButtonStyle">@style/DialogButton</item>
        <item name="android:background">@color/panel_primary</item>
    </style>

    <style name="DebugMenu" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
    </style>

</resources>